<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.sign.SignDetailFragment"
    android:background="@drawable/shape_background_gradient">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_signdetail_signicon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/ic_zodiac_taurus"
            android:tint="@android:color/white"/>

        <TextView
            android:id="@+id/text_signdetail_signname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/image_signdetail_signicon"
            app:layout_constraintStart_toEndOf="@id/image_signdetail_signicon"
            android:layout_marginStart="30dp"
            android:textColor="@android:color/white"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/text_signdetail_signdates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_signdetail_signname"
            app:layout_constraintStart_toStartOf="@id/text_signdetail_signname"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorAlmostWhite"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/text_signdetail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/image_signdetail_signicon"
            app:layout_constraintStart_toStartOf="@id/image_signdetail_signicon"
            android:layout_marginTop="40dp"
            android:textColor="@android:color/white"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/text_signdetail_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_signdetail_title"
            app:layout_constraintStart_toStartOf="@id/text_signdetail_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
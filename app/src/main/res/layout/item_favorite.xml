<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/shape_card_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_favoriteitem_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"
        android:tint="@color/colorText"
        android:src="@drawable/ic_zodiac_leo"
        />

    <TextView
        android:id="@+id/text_favoriteitem_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/image_favoriteitem_icon"
        app:layout_constraintBottom_toBottomOf="@id/image_favoriteitem_icon"
        app:layout_constraintLeft_toRightOf="@id/image_favoriteitem_icon"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:textColor="@color/colorText"
        />

    <TextView
        android:id="@+id/text_favoriteitem_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/image_favoriteitem_icon"
        app:layout_constraintBottom_toBottomOf="@id/image_favoriteitem_icon"
        app:layout_constraintLeft_toRightOf="@id/text_favoriteitem_sign"
        android:layout_margin="20dp"
        android:textColor="@color/colorText"/>

    <ImageView
        android:id="@+id/image_favoriteitem_fav"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/image_favoriteitem_icon"
        app:layout_constraintBottom_toBottomOf="@+id/image_favoriteitem_icon"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="30dp"
        android:tint="@color/colorText"
        android:src="@drawable/ic_favorite_checked"/>

    <TextView
        android:id="@+id/text_favoriteitem_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image_favoriteitem_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textColor="@color/colorText"/>

</androidx.constraintlayout.widget.ConstraintLayout>
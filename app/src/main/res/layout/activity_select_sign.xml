                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:text="@string/aquarius"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"/>

                    <TextView
